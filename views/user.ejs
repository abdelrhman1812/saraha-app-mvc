<!-- User Page -->

<%- include('./shared/header.ejs') %>

<div class="container text-center py-5 my-5 text-center">
  <div class="card-profile py-5 mb-5">
    <img
      src="/img/avatar.png"
      class="avatar"
      alt="<%= userData.user?.name %>"
    />

    <!-- User Name -->
    <h3 class="py-2"><%= userData.user?.name %></h3>
    <!-- Success -->
    <span>
      <% if (success) { %>
      <span class="text-success d-block my-2"> <%= success %> </span>

      <% } %>
    </span>
    <div class="w-75 m-auto">
      <form action="/sendMessage/<%= userId %>" method="post">
        <!-- Error -->
        <% if (validationError && validationError.length> 0) { %>
        <span class="text-danger d-block my-2">
          <%= validationError[0] %>
        </span>

        <% } %>
        <!-- Textarea -->
        <!-- prettier-ignore -->

        <textarea
          class="form-control"
          name="message"
          id="message"
          cols="10"
          rows="9"
          placeholder="You cannot send a Sarahah to yourself, share your profile with your friends ❤️"
        ><%= data?.message %></textarea>

        <button type="submit" class="btn-custom mt-3">
          <i class="far fa-paper-plane"></i>
          Send
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('./shared/footer.ejs') %>
