<!-- Message Page -->

<%- include('./shared/header.ejs') %>

<!-- Data from session  -->
<div class="container p-1 text-center py-5 mt-5 text-center">
  <div class="card-profile pt-5">
    <a href="" data-toggle="modal" data-target="#profile">
      <img src="img/avatar.png" class="avatar" alt="" />
    </a>
    <h3 class="py-2"><%= userData.user?.name %></h3>
    <button data-toggle="modal" data-target="#share" class="btn-custom mb-3">
      <i class="fas fa-share-alt"></i> Share Profile
    </button>
  </div>
</div>
<!-- profile photo Modal -->
<div
  class="modal fade"
  id="profile"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change photo</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <form action="" method="post">
            <label for="" class="text-muted"
              >The file size of the photo should not exceed 7 MB</label
            >
            <input class="form-control" type="file" name="photo" id="" />
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info">Upload</button>
        <button type="button" class="btn btn-outline-danger">
          Remove Photo
        </button>
      </div>
    </div>
  </div>
</div>

<!--  Share profile Modal -->
<div
  class="modal fade"
  id="share"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Share Profile</h5>
        <button
          type="button"
          class="close text-danger"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          <a href="<%= url  %>" target="_blank"> <%= url %> </a>
        </p>
        <img src="<%= qrCodeUrl  %>" class="w-50 d-block mx-auto" alt="" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<!-- /modal -->

<!-- =================messages=================== -->
<div class="container">
  <% if (messages && messages.length > 0) { %> <% messages.forEach(message => {
  %>
  <div class="row g-3 p-2">
    <div class="item w-100 my-2 p-5 text-center">
      <p class="m-0"><%= message.message %></p>
    </div>
  </div>
  <% }) %> <% } else { %>
  <p class="text-center">No messages available at the moment.</p>
  <% } %>
</div>

<%- include('./shared/footer.ejs') %>
